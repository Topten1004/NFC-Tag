@model BqsClinoTag.Models.Lieu

@{
    ViewData["Title"] = "Modification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Location</h4>
<input hidden id="idLieu" value="@Model.IdLieu" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLieu" />
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UidTag" class="control-label"></label>
                <input asp-for="UidTag" class="form-control" />
                <span asp-validation-for="UidTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdClient" class="control-label"></label>
                <select asp-for="IdClient" class="form-control" asp-items="ViewBag.IdClient"></select>
                <span asp-validation-for="IdClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Inventory" class="form-check-input" type="checkbox" id="flexCheckChecked">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Qty" class="form-check-input" type="checkbox" id="flexCheckChecked">
                </div>
            </div>

            <div class="form-group">
                <br />
                <button type="button" class="button-image" data-bs-toggle="modal" data-bs-target="#tacheModal">
                    <img class="img-24x24" src="~/img/plus.48x48.png">
                </button><span>Task(s)</span>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (TacheLieu t in Model.TacheLieus)
                    {
                        <tr>
                            <td>
                                @t.IdTacheNavigation.Nom
                            </td>
                            <td>
                                <a asp-controller="Locations" asp-action="SupprTaskLieu" asp-route-id="@t.IdTl">
                                    <img class="img-24x24" src="~/img/suppr.48x48.png">
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="tacheModal" tabindex="-1" role="dialog" aria-labelledby="tacheModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add a task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="list-group">
                    @foreach (Tache tache in ViewBag.ListeTache)
                    {
                        <a href="#" class="btnTacheChoisie list-group-item list-group-item-action" data-idtache="@tache.IdTache">@tache.Nom</a>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>

    $(".btnTacheChoisie").click(function () {

        var idTache = $(this).data("idtache");
        var idLieu = $("#idLieu").val();

        $.get("/Lieux/AjoutTacheLieu/" + idLieu + "/" + idTache, function (data) {
            if (data === true) {
                location.reload();
            } else {
                $('#hTitreMessage').text("Erreur");
                $('#pMessage').html("Error adding task. Operation canceled");
                $('#ModalMessage').modal("show");
            }
            var modal = $("#tacheModal");
            modal.hide();
        });
    });

</script>
<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
