@model BqsClinoTag.Models.Lieu

@{
    ViewData["Title"] = "Modification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Location</h4>
<input hidden id="idLieu" value="@Model.IdLieu" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLieu" />
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UidTag" class="control-label"></label>
                <input asp-for="UidTag" class="form-control" />
                <span asp-validation-for="UidTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdClient" class="control-label"></label>
                <select asp-for="IdClient" class="form-control" asp-items="ViewBag.IdClient"></select>
                <span asp-validation-for="IdClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Inventory" class="form-check-input" type="checkbox" id="flexCheckChecked">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Qty" class="form-check-input" type="checkbox" id="flexCheckChecked">
                </div>
            </div>

            <div class="form-group">
                <br />
                <button type="button" class="button-image" data-bs-toggle="modal" data-bs-target="#TaskModal">
                    <img class="img-24x24" src="~/img/plus.48x48.png">
                </button><span>Task(s)</span>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (TacheLieu t in Model.TacheLieus)
                    {
                        <tr>
                            <td>
                                @t.IdTacheNavigation.Nom
                            </td>
                            <td>
                                    <a asp-controller="Lieux" asp-action="SupprTaskLieu" asp-route-id="@t.IdTl">
                                        <img class="img-24x24" src="~/img/suppr.48x48.png">
                                    </a>
                            </td>
@*                            <td>
                                @if (!t.PassageTasks.Any())
                                {
                                    <a asp-controller="Lieux" asp-action="SupprTaskLieu" asp-route-id="@t.IdTl">
                                        <img class="img-24x24" src="~/img/suppr.48x48.png">
                                    </a>
                                }
                            </td>*@
                        </tr>
                    }
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary my-2" />
            </div>
        </form>
        @await Html.PartialAsync("_ChoixTask")
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
