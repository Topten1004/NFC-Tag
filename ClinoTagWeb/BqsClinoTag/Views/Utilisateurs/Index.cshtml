@model IEnumerable<BqsClinoTag.Models.Utilisateur>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>

<p>
    <a asp-action="Create">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Login
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleNavigation.Role1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUtilisateur">Modify</a> |
                    <a asp-action="Details" asp-route-id="@item.IdUtilisateur">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdUtilisateur">Delete</a>
            </td>
        </tr>}
    </tbody>
</table>
